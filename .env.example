# Duplicate this to .env
DATABASE_URL='your database url' ## required for drizzle - create free PostgreSQL database: https://neon.com/

APP_URL='your app url' ## required for next-sitemap and stripe

GOOGLE_SITE_VERIFICATION_ID='your google verification id' ## not required

GITHUB_ID='your github client ID' ## required for next-auth
GITHUB_SECRET='your github secret ID' ## required for next-auth
GOOGLE_CLIENT_ID='your google client id' ## optional - required to enable Google auth
GOOGLE_CLIENT_SECRET='your google client secret' ## optional - required to enable Google auth
APPLE_CLIENT_ID='your apple service id' ## optional - required to enable Apple auth
APPLE_CLIENT_SECRET='your apple client secret' ## optional - required to enable Apple auth

NEXTAUTH_SECRET='your next-auth secret' ## required for next-auth - generate one here: https://generate-secret.vercel.app/32
NEXTAUTH_URL='http://localhost:3000' ## Only required for localhost

STRIPE_SECRET_KEY='your stripe secret key' ## required for stripe
STRIPE_WEBHOOK_SECRET_KEY='your webhook secret key' ## required for stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY='your stripe publishable key' ## required for stripe

RESEND_API_KEY='your resend key' ## optional - required to send activation emails
RESEND_FROM_EMAIL='noreply@yourdomain.com' ## optional - verified Resend sender
ONBOARDING_CRON_SECRET='super-secret-cron-token' ## optional - protects onboarding reminder endpoint
